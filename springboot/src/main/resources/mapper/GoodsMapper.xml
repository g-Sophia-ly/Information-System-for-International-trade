<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.GoodsMapper">

    <sql id="Base_Column_List">
        id,goods_no,types,price,fabric,lining,heel,outsole,avatar,status,stotal,ptotal
    </sql>

    <select id="selectAll" resultType="com.example.entity.Goods">
        select
        <include refid="Base_Column_List" />
        from goods
        <where>
            <if test="id != null"> and id = #{id}</if>
            <if test="goodsNo != null"> and goods_no like concat('%', #{goodsNo}, '%')</if>
            <if test="types != null"> and types like concat('%', #{types}, '%')</if>
            <if test="price != null"> and price like concat('%', #{price}, '%')</if>
            <if test="fabric != null"> and fabric like concat('%', #{fabric}, '%')</if>
            <if test="lining != null"> and lining like concat('%', #{lining}, '%')</if>
            <if test="heel != null"> and heel like concat('%', #{heel}, '%')</if>
            <if test="outsole != null"> and outsole like concat('%', #{outsole}, '%')</if>
            <if test="avatar != null"> and avatar like concat('%', #{avatar}, '%')</if>
            <if test="status != null"> and status like concat('%', #{status}, '%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Goods">
        select
        <include refid="Base_Column_List" />
        from goods
        where id = #{id}
    </select>

    <select id="selectByGoodsNo" resultType="com.example.entity.Goods">
        select * from `goods` where goods_no =#{goodsNo};
    </select>

    <delete id="deleteById">
        delete from goods
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Goods" useGeneratedKeys="true">
        insert into goods
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="goodsNo != null">goods_no,</if>
            <if test="types != null">types,</if>
            <if test="price != null">price,</if>
            <if test="fabric != null">fabric,</if>
            <if test="lining != null">lining,</if>
            <if test="heel != null">heel,</if>
            <if test="outsole != null">outsole,</if>
            <if test="avatar != null">avatar,</if>
            <if test="status != null">status,</if>
            <if test="stotal != null">stotal,</if>
            <if test="ptotal != null">ptotal,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="goodsNo != null">#{goodsNo},</if>
            <if test="types != null">#{types},</if>
            <if test="price != null">#{price},</if>
            <if test="fabric != null">#{fabric},</if>
            <if test="lining != null">#{lining},</if>
            <if test="heel != null">#{heel},</if>
            <if test="outsole != null">#{outsole},</if>
            <if test="avatar != null">#{avatar},</if>
            <if test="status != null">#{status},</if>
            <if test="stotal != null">#{stotal},</if>
            <if test="ptotal != null">#{ptotal},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Goods">
        update goods
        <set>
            <if test="goodsNo != null">
                goods_no = #{goodsNo},
            </if>
            <if test="types != null">
                types = #{types},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="fabric != null">
                fabric = #{fabric},
            </if>
            <if test="lining != null">
                lining = #{lining},
            </if>
            <if test="heel != null">
                heel = #{heel},
            </if>
            <if test="outsole != null">
                outsole = #{outsole},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="stotal != null">
                stotal = #{stotal},
            </if>
            <if test="ptotal != null">
                ptotal = #{ptotal},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="updateByGoodNo" parameterType="com.example.entity.Goods">
        update goods set stotal=#{stotal},ptotal=#{ptotal} where goods_no=#{goodsNo}
    </update>

</mapper>