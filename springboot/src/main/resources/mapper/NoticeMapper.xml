<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.NoticeMapper">

    <sql id="Base_Column_List">
        id,order_no,content,time,factory,status,staff,exp
    </sql>

    <select id="selectAll" resultType="com.example.entity.Notice">
        select
        <include refid="Base_Column_List" />
        from notice
        <where>
            <if test="id != null"> and id= #{id}</if>
            <if test="orderNo != null"> and order_no like concat('%', #{orderNo}, '%')</if>
            <if test="content != null"> and content= #{content}</if>
            <if test="time != null"> and time= #{time}</if>
            <if test="factory != null"> and factory= #{factory}</if>
            <if test="staff != null"> and staff= #{staff}</if>
            <if test="exp != null"> and exp= #{exp}</if>
            <if test="status != null"> and status = #{status}</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Notice">
        select
        <include refid="Base_Column_List" />
        from notice
        where id = #{id}
    </select>

    <delete id="deleteById">
        delete from notice
        where  id = #{id}
    </delete>

    <insert id="insert" parameterType="com.example.entity.Notice" useGeneratedKeys="true">
        insert into notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="orderNo != null">order_no,</if>
                <if test="content != null">content,</if>
                <if test="time != null">time,</if>
                <if test="factory != null">factory,</if>
                <if test="status != null">status,</if>
                <if test="staff != null">staff,</if>
                <if test="exp != null">exp,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="orderNo != null">#{orderNo},</if>
                <if test="content != null">#{content},</if>
                <if test="time != null">#{time},</if>
                <if test="factory != null">#{factory},</if>
                <if test="status != null">#{status},</if>
                <if test="staff != null">#{staff},</if>
                <if test="exp != null">#{exp},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="com.example.entity.Notice">
        update notice
        <set>
            <if test="orderNo != null">
                order_no = #{orderNo},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="factory != null">
                factory = #{factory},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="staff != null">
                staff = #{staff},
            </if>
            <if test="exp != null">
                exp = #{exp},
            </if>
        </set>
        where id = #{id} 
    </update>

</mapper>